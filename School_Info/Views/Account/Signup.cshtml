@model School_Info.Users
@{
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PolluxUI Admin</title>
    <!-- base:css -->
    <link rel="stylesheet" href="~/Content/vendors/typicons/typicons.css">
    <link rel="stylesheet" href="~/Content/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/Content/css/vertical-layout-light/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/Content/images/favicon.png" />
</head>
@using (Html.BeginForm())
{
    <body>

        <div class="container-scroller">
            <div class="container-fluid page-body-wrapper full-page-wrapper">
                <div class="content-wrapper d-flex align-items-center auth px-0">
                    <div class="row w-100 mx-0">
                        <div class="col-lg-4 mx-auto">
                            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                                <div class="brand-logo">
                                    <img src="~/Content/images/logo-dark.svg" alt="logo">
                                </div>
                                <h4>New here?</h4>
                                <h6 class="font-weight-light">
                                    Adventure starts here 🚀
                                    Make your app management easy and fun!
                                </h6>
                                <form class="pt-3">
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control  form-control-lg", @id = "exampleInputUsername1", @placeholder = "Email",@required="" } })

                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control  form-control-lg", @id = "exampleInputPassword1", @placeholder = "Password", @type = "Password", @required = "" } })
                                        @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control  form-control-lg", @id = "exampleInputName1", @placeholder = "Name" , @required = "" } })
                                        @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control  form-control-lg", @id = "exampleInputMobileNO1", @placeholder = "MobileNo", @required = "" } })
                                        @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                    </div>
                                    <div class="form-group">
                                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control  form-control-lg", @id = "exampleInput Address1", @placeholder = "Address", @required = "" } })
                                        @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                    </div>

                                    <div class="mt-3">
                                        @*<a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" ty href="~/Account/Signup">SIGN UP</a>*@
                                        <button type="submit" value="Create" class="btn btn-light btn-block waves-effect waves-light">Sign Up</button>
                                    </div>
                                    <div class="text-center mt-4 font-weight-light">
                                        Already have an account? <a href="~/Account/Login" class="text-primary">Login</a>
                                    </div>
                                    <h3>@ViewBag.msg</h3>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- content-wrapper ends -->
            </div>
            <!-- page-body-wrapper ends -->
        </div>
        <!-- container-scroller -->
        <!-- base:js -->
        <script src="../../vendors/js/vendor.bundle.base.js"></script>
        <!-- endinject -->
        <!-- inject:js -->
        <script src="../../js/off-canvas.js"></script>
        <script src="../../js/hoverable-collapse.js"></script>
        <script src="../../js/template.js"></script>
        <script src="../../js/settings.js"></script>
        <script src="../../js/todolist.js"></script>
        <!-- endinject -->
    </body>
}
</html>
