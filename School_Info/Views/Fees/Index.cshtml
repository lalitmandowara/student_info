@model IEnumerable<School_Info.fees>

@{
    ViewBag.Title = "Index";
}


@Html.ActionLink("Create New", "Create")
<div class="card">
    <h5 class="card-header">ClassList</h5>
    <div class="table-responsive text-nowrap">
       
        <table class="table table-dark">
            <tbody class="table-border-bottom-0">

            <thead>
                <tr style="text-align:center">
                    <th>Subject Name</th>
                    <th>Month</th>
                    <th>Fees</th>
                    <th>Amount</th>


                    <th>Actions</th>
                </tr>
            </thead>


            @foreach (var item in Model)
            {

                <tr style="text-align:center">
                    <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                            @Html.DisplayFor(modelItem => item.student.Name)
                        </strong>
                    </td>

                    <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                            @Html.DisplayFor(modelItem => item.Month)
                        </strong>
                    </td>

                    <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                            @Html.DisplayFor(modelItem => item.FeesDate)
                        </strong>
                    </td>

                    <td>
                        <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                            @Html.DisplayFor(modelItem => item.Amount)
                        </strong>
                    </td>

                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <button type="button" class="btn btn-success btn-sm btn-icon-text mr-3">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                                </button>



                                <button type="button" class="btn btn-primary btn-sm btn-icon-text mr-3">
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                </button>


                                <button type="button" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </button>

                            </div>
                        </div>
                    </td>
                </tr>


            }

        </table>
        </tbody>
    </div>
</div>

