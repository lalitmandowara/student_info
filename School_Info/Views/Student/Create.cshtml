@model School_Info.student

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">New Student</h5>
                    <small class="text-muted float-end">insert Student Form</small>
                </div>
                <div class="card-body">
                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Name</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Roll No</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.RollNo, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Address</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>

                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">FatherName</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.FatherName, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Mobileno</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.MobileNo, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">ClassName</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("ClassId", ViewBag.Classlist as SelectList, "Select Class")
                                @ViewBag.msg
                            </div>
                        </div>


                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>s
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>




