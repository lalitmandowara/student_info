@model IEnumerable<School_Info.student>

@{
    ViewBag.Title = "Index";
}
<p>
    @Html.ActionLink("Create New", "Create")
    <div class="card">
        <h5 class="card-header">Student</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-dark">
                <thead>
                    <tr style="text-align:center">
                        <th>Students Name</th>
                        <th>Roll No</th>
                        <th>Adress</th>
                        <th>Father Name</th>
                        <th>MobileNo</th>
                        <th>Class Name</th>
                        <th>Action</th>

                     
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    @foreach (var item in Model)
                    {

                        <tr style="text-align:center">
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.RollNo)
                                </strong>
                            </td>

                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.Address)
                                </strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.FatherName)
                                </strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.MobileNo)
                                </strong>
                            </td>
                            <td>
                                <i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>
                                    @Html.DisplayFor(modelItem => item.Class.ClassName)
                                </strong>
                            </td>






                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <button type="button" class="btn btn-success btn-sm btn-icon-text mr-3">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id })
                                        </button>



                                        <button type="button" class="btn btn-primary btn-sm btn-icon-text mr-3">
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                        </button>


                                        <button type="button" class="btn btn-danger btn-sm btn-icon-text mr-3">
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </button>


                            </td>
                        </tr>

                    }
                </tbody>
                    </table>
                    </div>
                    </div>
                    







