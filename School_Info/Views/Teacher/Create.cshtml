@model School_Info.Teacher

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Insert Teacher</h5>
                    <small class="text-muted float-end"></small>
                </div>
                <div class="card-body">s
                    <form>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">TeacherName</label>
                            <div class="col-sm-10">
                                @Html.EditorFor(model => model.TeacherName, new { htmlAttributes = new { @class = "form-control", @required = "" } })
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">SubjectName</label>
                            <div class="col-sm-10">
                                @Html.DropDownList("SubjectId", ViewBag.Subject as SelectList, "Select Subject")
                                @ViewBag.msg
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}






<div>
    @Html.ActionLink("Back to List", "Index")
</div>
